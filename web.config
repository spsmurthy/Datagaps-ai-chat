<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
        </handlers>
        <httpPlatform processPath="python.exe" arguments="-m gunicorn --conf gunicorn.conf.py app:app" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" startupTimeLimit="60" requestTimeout="00:04:00">
        </httpPlatform>
        <rewrite>
            <rules>
                <rule name="Static" stopProcessing="true">
                    <match url="^static/.*" ignoreCase="false" />
                    <action type="Rewrite" url="{R:0}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
        <staticContent>
            <mimeMap fileExtension=".ts" mimeType="text/plain; charset=utf-8" />
            <mimeMap fileExtension=".tsx" mimeType="text/plain; charset=utf-8" />
        </staticContent>
    </system.webServer>
</configuration>
